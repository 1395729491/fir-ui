@require '../_styles/settings';

.nav-bar {
  display: flex;
  align-items: center;
  height: 45 * $hd;
  background-color: $brand-primary;
  color: $fill-base;

  &.light {
    background-color: $fill-base;
    color: $brand-primary;

    .title {
      color: $color-text-base;
    }
  }
}

.left, .title, .right {
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
}

.left {
  padding-left: $h-spacing-lg;
  font-size: $link-button-font-size;
}

.title {
  justify-content: center;
  font-size: 18 * $hd;
  white-space: nowrap;
}

.right {
  justify-content: flex-end;
  font-size: $link-button-font-size;
  margin-right: $h-spacing-lg;
}
