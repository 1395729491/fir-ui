@require '../_styles/settings';

.choose {
  flex-center: inline;
  &:not(:first-child) {
    margin-left: $h-spacing-md;
  }
  &.disabled {
    disabled: true;
  }
}

.input {
  display: none;
}

.box {
  position: relative;
  width: 22 * $hd;
  height: 22 * $hd;
  border: 1 * $hd solid currentColor;
  border-radius: 50%;
  box-sizing: border-box;
  color: #ccc;
  .square & {
    border-radius: 0;
  }
  &:after {
    content: '';
    position: absolute;
    box-sizing: border-box;
  }
  .input:checked + & {
    color: $brand-primary;
    &.radio:after {
      width: 8 * $hd;
      height: 8 * $hd;
      border-radius: 50%;
      background-color: currentColor;
      top: 50%;
      left: 50%;
      transform: translate3d(-50%, -50%, 0px);
      z-index: 1;
      .square & {
        border-radius: 0;
      }
    }
    &.checkbox {
      background-color: currentColor;
      &:after {
        top: 40%;
        left: 50%;
        width: 6 * $hd;
        height: 12 * $hd;
        border-style: solid;
        border-width: 0 1 * $hd 1 * $hd 0;
        border-color: white;
        transform: translate3d(-50%, -50%, 0px) rotate(45deg);
        z-index: 1;
      }
    }
  }
}

.message {
  flex: 1;
  margin-left: $h-spacing-sm;
}
