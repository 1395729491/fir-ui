@require '../_styles/settings';

.grid {
  background: $fill-base;
  &.border {
    hairline(bottom);
  }
}

.line {
  display: flex;
  position: relative;
  .border & {
    hairline(top right);
  }
}

.item {
  position: relative;
  flex: 1;
  .border & {
    hairline(left);
  }
  &:not(.placeholder):active {
    background-color: $fill-tap;
  }
  .content {
    text-align: center;
    width: 100%;
    height: 100%;
    padding: $v-spacing-lg 0;
    .square & {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
    }
  }
  .inner-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    .square & {
      height: 100%;
    }
  }
  .icon {
    max-width: 100%;
    .square & {
      margin-top: $v-spacing-md;
      // width: 28% !important;
    }
  }
  .text {
    margin-top: $v-spacing-md;
    font-size: $font-size-caption-sm;
    color: $color-text-base;
    text-align: center;
    word-break: break-all;
    .cols1 &, .cols2 & {
      margin-top: $v-spacing-lg;
      font-size: 18 * $hd;
    }
    .cols3 & {
      font-size: $font-size-caption;
    }
  }
  .square & {
    &:before {
      display: block;
      content: ' ';
      padding-bottom: 100%;
    }
  }
}
