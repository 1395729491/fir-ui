@require '../_styles/settings';

.placeholder {
  height: $tab-bar-height;
}

.tab-bar {
  background-color: $fill-base;
  box-sizing: border-box;
  height: $tab-bar-height;
  hairline(top);
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  color: #888;
  transition: color .3s;
  &.selected {
    color: $brand-primary;
  }
}

.icon, .label {
  text-align: center;
}

.icon {
  width: $icon-size-md;
  height: $icon-size-md;
  font-size: $icon-size-md;
  [data-component-badge] {
    margin-top: 5 * $hd;
  }
}

.label {
  font-size: $font-size-icontext;
  margin: $v-spacing-xs 0 0 0;
  line-height: $line-height-base;
  text-align: center;
}
