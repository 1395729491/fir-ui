@require '../_styles/settings';

.progress {
  display: block;
  &.fixed {
    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
    z-index: $progress-zindex;
  }
  &.unfilled {
    background-color: $border-color-base;
  }
}

.bar {
  height: 0;
  border: $border-width-lg solid $brand-primary;
  transition: all .3s linear 0s;
}
