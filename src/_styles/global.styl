@require './settings';

:global {
  *,
  *:before,
  *:after {
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    box-sizing: border-box;
  }

  body {
    background-color: $fill-body;
    font-size: $font-size-base;
  }

  *[contenteditable] {
    -webkit-user-select: auto !important;
  }

  *:focus {
    outline: none;
  }

  a {
    background: transparent;
    text-decoration: none;
    outline: none;
  }
}
