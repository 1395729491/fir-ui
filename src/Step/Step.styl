@require '../_styles/settings';

.step {
  display: flex;
}

.item {
  flex: 1;
  text-align: center;
  position: relative;
}

.indicator {
  display: flex;
  align-items: center;
}

.text {
  border: 1 * $hd solid $color-text-placeholder;
  width: $icon-size-md;
  height: $icon-size-md;
  line-height: $icon-size-md;
  border-radius: $icon-size-md;
  text-align: center;
  font-size: $font-size-base;
  box-sizing: border-box;
  transition: background-color .3s, border-color .3s;
  .process & {
    background-color: $brand-primary;
    color: $color-text-base-inverse;
    border-color: $brand-primary;
  }
}

.icon {
  font-size: $icon-size-md;
  color: $color-text-placeholder;
  .done & {
    color: $brand-primary;
  }
}

.tail {
  flex: 1;
  height: 1 * $hd;
  background-color: $border-color-base;
  &.left {
    margin-right: 10px;
    .done + .item & {
      background-color: $brand-primary;
    }
  }
  &.right {
    margin-left: 10px;
    .done & {
      background-color: $brand-primary;
    }
  }
  .item:first-child &.left, .item:last-child &.right {
    visibility: hidden;
  }
}

.content {
  margin-top: 8 * $hd;
}

.title {
  font-size: $font-size-caption;
  margin-bottom: 4 * $hd;
  color: $color-text-base;
  font-weight: bold;
  display: inline-block;
  position: relative;
}

.desc {
  font-size: $font-size-subhead;
  color: $color-text-placeholder;
}

.error {
  .item.prev {
    .tail.right {
      background-color: $brand-error;
    }
  }
  .item.process {
    .text {
      background-color: $brand-error;
      border-color: $brand-error;
    }
    .icon, .title, .desc {
      color: $brand-error;
    }
    .tail.left {
      background-color: $brand-error;
    }
  }
}